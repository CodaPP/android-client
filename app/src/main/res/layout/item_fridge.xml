<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view_station"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="32dp"
    app:cardPreventCornerOverlap="false"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_station"
                android:padding="2dp"
                android:layout_width="64dp"
                android:layout_height="64dp" />

            <TextView
                android:id="@+id/text_station_distance"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:gravity="center"
                android:padding="2dp"
                android:textSize="24sp"
                android:visibility="gone"
                tools:text="0.12 m" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:orientation="vertical">

            <TextView
                style="@style/TextAppearance.AppCompat.Headline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text_station_name" />

            <TextView
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:id="@+id/text_station_bio" />

            <View style="@style/Divider"
                android:id="@+id/divider1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text_station_temp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text_station_humid"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text_station_people"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:visibility="gone"
                android:id="@+id/expand"/>

            <View style="@style/Divider"
                android:id="@+id/divider2" />

            <TextView
                style="@style/TextAppearance.AppCompat.Body2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:id="@+id/text_station_namespace" />

            <TextView
                style="@style/TextAppearance.AppCompat.Body2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:ellipsize="marquee"
                android:id="@+id/text_station_instance" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>